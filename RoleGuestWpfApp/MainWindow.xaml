<Window x:Class="RoleGuestWpfApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:RoleGuestWpfApp"
        mc:Ignorable="d"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="RoleGuest" Height="500" Width="700">
    <Grid Background= "#6495ED">
        <Border MinWidth="400" Margin="15" Background="#ADD8E6" VerticalAlignment="Center" Padding="30" MaxWidth="550" CornerRadius="20">
            <Border.Effect>
                <DropShadowEffect BlurRadius="60" Color="LightGray" ShadowDepth="0"/>
            </Border.Effect>
            <StackPanel>
                <TextBlock Text="Main Menu" FontSize="30" FontWeight="Bold" Margin="0 0 0 20" />

                <Grid Margin="0 0 0 20">
                    <Button HorizontalAlignment="Left" Content="Settings" Click="Button_Settings_Click"/>
                </Grid>

                <Button Content="Log out" Margin="0 10" Style="{StaticResource MaterialDesignFlatButton}" Click="Button_LogOut_Click"/>

            </StackPanel>
        </Border>
    </Grid>
</Window>
